/**
 * Implements hook_install().
 */
function slac_misc_frontpage_install() {
  $frontpage_node = (object) array(
    'title' => t('Frontpage'),
    'type' => 'landing_page',
    'language' => 'und',
    'name' => 'admin',
    'path' => array(
      'alias' => 'front',
      'pathauto' => 0,
    ),
    'uid' => 1,
  );
  node_save($frontpage_node);

  $panels_display = _slac_misc_frontpage_install__panels_display();

  _slac_misc_frontpage_install__panelizer_entity($frontpage_node, $panels_display['did']);

  _slac_misc_frontpage_install__panes($panels_display['did']);

  _slac_misc_install__menu_item($frontpage_node->nid);

  variable_set('site_frontpage', 'node/' . $frontpage_node->nid);
}

/**
 * Create panels display.
 */
function _slac_misc_frontpage_install__panels_display() {
  $panels_display = array(
    'layout' => 'two_col_extorg',
    'layout_settings' => array(),
    'panel_settings' => array(
      'style_settings' => array (
        'default' => NULL,
        'center' => NULL,
        'left' => NULL,
        'right' => NULL,
      ),
    ),
  );
  drupal_write_record('panels_display', $panels_display);
  return $panels_display;
}

