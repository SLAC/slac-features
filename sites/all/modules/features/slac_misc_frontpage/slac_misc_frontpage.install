/**
 * Create menu item.
 */
function _slac_misc_install__menu_item($nid) {
  if (!is_numeric($nid)) {
    return;
  }
  $item = array(
    'menu_name' => 'main-menu',
    'link_path' => 'node/' . $nid,
    'router_path' => 'node/%',
    'link_title' => t('Home'),
    'module' => 'menu',
    'weight' => 0,
    'expanded' => 0,
  );
  $exists = db_query(
    "SELECT mlid from {menu_links} WHERE link_title=:link_title AND link_path=:link_path AND menu_name=:menu_name",
    array(
      ':link_title' => $item['link_title'],
      ':link_path' => $item['link_path'],
      ':menu_name' => 'main-menu'
    )
  )->fetchField();

  // Save the record if the data does not exist
  if(!$exists) {
    menu_link_save($item);
  }
}
